<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="@dimen/menuIcon"
        android:layout_height="@dimen/menuIcon"
        android:layout_margin="@dimen/dPad"
        android:contentDescription="@string/menu_icon"
        android:padding="@dimen/dPad"
        android:visibility="gone" />

    <TextView
        android:id="@+id/optionText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/pad16dp"
        android:layout_marginEnd="@dimen/dPad"
        android:layout_marginStart="@dimen/dPad"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="@dimen/dPad" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/optionFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pad16dp"
        android:layout_marginEnd="@dimen/dPad"
        android:layout_marginStart="@dimen/dPad"
        app:fabSize="mini"
        app:rippleColor="@color/fab_grey" />

</LinearLayout>